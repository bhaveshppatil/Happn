<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Quiz.QuizThreeQuiz">

    <RelativeLayout
        android:id="@+id/RelativeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/edPages"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3 of 7"
            android:padding="16dp"
            android:gravity="center"
            android:textSize="23sp"
            android:textStyle="bold"
            android:textColor="@color/black">
        </TextView>


        <Button
            android:id="@+id/BtnSkipFood"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="3dp"
            android:background="@color/white"
            android:text="Skip"
            android:textSize="20sp"
            android:textColor="#0087b4"
            android:padding="16dp"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
    <View
        android:id="@+id/vUnderLine"
        android:layout_below="@+id/RelativeView"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>


    <TextView
        android:id="@+id/TvMainEmoji"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        app:drawableTopCompat="@drawable/folk" />

    <TextView
        android:id="@+id/TvMainText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Which answer best describes your cooking skills?"
        android:textColor="@color/black"
        android:textSize="23sp"
        android:fontFamily="@font/cantora_one"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"/>


    <Button
        android:id="@+id/BtnOneFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="i'm a microwave master"
        android:textColor="@color/black"
        android:layout_marginTop="44dp"
        android:background="@drawable/background_shape"
        android:padding="12dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"/>


    <Button
        android:id="@+id/BtnTwoFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I'm a delivery expert"
        android:padding="12dp"
        android:background="@drawable/background_shape"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"/>

    <Button
        android:id="@+id/BtnThreeFood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/background_shape"
        android:text="i know a few good recipes"
        android:textColor="@color/black"
        android:layout_marginTop="24dp"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"/>

</LinearLayout>